<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student_record1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yashbohara.project.StudentRecord1">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e81"
        android:layout_alignBaseline="@+id/t81"
        android:layout_alignBottom="@+id/t81"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Enter Name" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t82"
        android:layout_alignLeft="@+id/e81"
        android:layout_alignStart="@+id/e81"
        android:id="@+id/j81"
        android:entries="@array/Item" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t84"
        android:layout_alignLeft="@+id/j82"
        android:layout_alignStart="@+id/j82"
        android:id="@+id/j83"
        android:entries="@array/Section" />

    <Button
        android:text="VIEW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/b81"
        android:onClick="View_Clicked"
        android:background="@android:color/transparent" />

    <TextView
        android:text="Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/t84"
        android:textColor="@android:color/black"
        android:layout_below="@+id/j82"
        android:layout_alignLeft="@+id/t83"
        android:layout_alignStart="@+id/t83" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/j82"
        android:entries="@array/Branch"
        android:layout_below="@+id/j81"
        android:layout_alignLeft="@+id/j81"
        android:layout_alignStart="@+id/j81"
        android:layout_marginTop="43dp" />

    <TextView
        android:text="Branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t83"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/j82"
        android:layout_alignBottom="@+id/j82"
        android:layout_alignRight="@+id/t81"
        android:layout_alignEnd="@+id/t81" />

    <TextView
        android:text="Semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/t82"
        android:textColor="@android:color/black"
        android:layout_below="@+id/e81"
        android:layout_alignLeft="@+id/t83"
        android:layout_alignStart="@+id/t83" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="74dp"
        android:id="@+id/t81"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e83"
        android:layout_alignBaseline="@+id/t85"
        android:layout_alignBottom="@+id/t85"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textIsSelectable="false" />

    <TextView
        android:text="Roll No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/t85"
        android:textColor="@android:color/black"
        android:layout_below="@+id/j83"
        android:layout_alignRight="@+id/t83"
        android:layout_alignEnd="@+id/t83"
        />
</RelativeLayout>
