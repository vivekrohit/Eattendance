<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yashbohara.project.RegisterStudent">

    <TextView
        android:text="Semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/s51"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:id="@+id/t62" />

    <TextView
        android:text="Branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t62"
        android:layout_alignLeft="@+id/t62"
        android:layout_alignStart="@+id/t62"
        android:layout_marginTop="73dp"
        android:id="@+id/t63" />

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/t62"
        android:layout_alignLeft="@+id/t62"
        android:layout_alignStart="@+id/t62"
        android:layout_marginBottom="40dp"
        android:id="@+id/t61" />

    <TextView
        android:text="Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t63"
        android:layout_alignLeft="@+id/t63"
        android:layout_alignStart="@+id/t63"
        android:layout_marginTop="73dp"
        android:id="@+id/t64" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/s52"
        android:layout_above="@+id/t64"
        android:layout_alignLeft="@+id/s51"
        android:layout_alignStart="@+id/s51"
        android:entries="@array/Branch" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/t64"
        android:layout_alignLeft="@+id/s52"
        android:layout_alignStart="@+id/s52"
        android:id="@+id/s53"
        android:entries="@array/Section" />

    <TextView
        android:text="Roll No."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t64"
        android:layout_alignLeft="@+id/t64"
        android:layout_alignStart="@+id/t64"
        android:layout_marginTop="50dp"
        android:id="@+id/t65" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e62"
        android:layout_alignBaseline="@+id/t65"
        android:layout_alignBottom="@+id/t65"
        android:layout_alignLeft="@+id/s53"
        android:layout_alignStart="@+id/s53" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/e61"
        android:layout_alignTop="@+id/t61"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="REGISTER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b61"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="RegisterClicked" />

    <Spinner
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:id="@+id/s51"
        android:entries="@array/Item"
        android:layout_width="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/e61"
        android:layout_alignStart="@+id/e61" />

</RelativeLayout>
