<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_attendance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yashbohara.project.TakeAttendance"
    android:background="@android:color/background_light">

    <TextView
        android:text="Section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t101"
        android:layout_alignLeft="@+id/t101"
        android:layout_alignStart="@+id/t101"
        android:layout_marginTop="89dp"
        android:id="@+id/t102"
        android:textColor="@android:color/black" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/s101"
        android:layout_alignTop="@+id/t101"
        android:layout_alignLeft="@+id/s102"
        android:layout_alignStart="@+id/s102"
        android:entries="@array/Branch" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/s102"
        android:layout_alignTop="@+id/t102"
        android:layout_alignLeft="@+id/s103"
        android:layout_alignStart="@+id/s103"
        android:entries="@array/Section" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/s103"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:entries="@array/Item"
        android:layout_alignTop="@+id/t103"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="TakeAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:id="@+id/b1"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/t103"
        android:layout_toEndOf="@+id/t103"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:onClick="TakeAttendance_Clicked"
        android:background="@android:color/transparent" />

    <TextView
        android:text="Subject Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/t103"
        android:layout_alignEnd="@+id/t103"
        android:id="@+id/t104"
        android:textColor="@android:color/black" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/t104"
        android:layout_alignLeft="@+id/s102"
        android:layout_alignStart="@+id/s102"
        android:id="@+id/s104"
        android:entries="@array/Code" />

    <TextView
        android:text="Branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/t101"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Semester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:id="@+id/t103"
        android:textColor="@android:color/black"
        android:layout_below="@+id/t104"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
