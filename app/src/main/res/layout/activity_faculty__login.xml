<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_faculty__login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yashbohara.project.Faculty_Login"
    android:background="@android:color/background_light">

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b42"
        android:onClick="RegisterFaculty_Clicked"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/b31"
        android:layout_alignStart="@+id/b31" />

    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="29dp"
        android:id="@+id/b31"
        android:onClick="Login_Clicked"
        android:background="@android:color/background_light"
        android:layout_above="@+id/b42"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t32"
        android:textColor="@android:color/black"
        android:layout_above="@+id/b31"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="49dp" />

    <TextView
        android:text="Login Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t31"
        android:textColor="@android:color/black"
        android:layout_above="@+id/e32"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/e32"
        android:layout_alignBaseline="@+id/t32"
        android:layout_alignBottom="@+id/t32"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/e31"
        android:layout_alignBaseline="@+id/t31"
        android:layout_alignBottom="@+id/t31"
        android:layout_alignLeft="@+id/b31"
        android:layout_alignStart="@+id/b31" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/l"
        android:id="@+id/imageButton5"
        android:background="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
