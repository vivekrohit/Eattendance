<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yashbohara.project">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".M1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Admin_Login" />
        <activity android:name=".Faculty_Login" />
        <activity android:name=".Student_Login" />
        <activity android:name=".Admin_Functions" />
        <activity android:name=".RegisterStudent" />
        <activity android:name=".RegisterFaculty" />
        <activity android:name=".StudentRecord" />
        <activity android:name=".StudentDetails" />
        <activity android:name=".Faculty_Functions" />
        <activity android:name=".TakeAttendance" />
        <activity android:name=".AttendanceList"></activity>
    </application>

</manifest>